<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd">
    
	<mvc:annotation-driven />

	
    <bean id="taskScheduler" class="org.n52.io.task.JobScheduler" init-method="init" destroy-method="shutdown">
        <property name="startupDelayInSeconds" value="5" />
        <property name="scheduledJobs">
            <list>
                <ref bean="preRenderJob"/>
            </list>
        </property>
    </bean>

    <bean id="preRenderJob" class="org.n52.io.request.PreRenderingTask">
        <property name="jobName" value="Prerendering Task" />
        <property name="jobDescription" value="Job which prerenders series data for direct Web access." />
        <property name="triggerName" value="dailyAt_03:00am" />

        <!-- http://quartz-scheduler.org/documentation/quartz-2.1.x/tutorials/tutorial-lesson-06 -->
        <property name="cronExpression" value="0 0 03 * * ?" />

        <property name="triggerAtStartup" value="true" />
        <property name="rewriteAtStartup" value="false" />
    </bean>

</beans>